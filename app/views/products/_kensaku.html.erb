<div class="card">
  <h7 class="card-title card-header text-center bg-info text-white">商品検索</h7>
  <div class="card-body">
  <%= search_form_for @q do |f| %>
    <%= f.label :name_cont, "商品名" %><br>
    <%= f.search_field :name_cont %>
    <%= f.label :calories_gteq, "カロリー（以上）", class: 'mt-2' %>
    <%= f.number_field :calories_gteq %>
    <%= f.label :calories_lteq, "カロリー（以下）", class: 'mt-2' %>
    <%= f.number_field :calories_lteq %>
    <%= f.label :user_id_eq, "自分が投稿した商品", class: 'mt-2' %>
    <%= f.check_box :user_id_eq, {checked: false}, current_user.id, nil %>
    <%= f.label :genre_id_eq, 'ジャンルで絞り込む', class: 'mt-2' %>
    <%= f.collection_select :genre_id_eq, Genre.all, :id, :name, {include_blank: 'すべてのジャンル'}, class: 'form-control' %>
    <%= f.submit "検索", class: 'btn btn-info mt-2' %><br>
    <%= link_to "全件表示", products_path, class: 'btn btn-success mt-2' %>
  <% end %>
  </div>
</div>
