<div class="container">
  <h4 class="mb-5"><span class="bg-light px-3 pb-1">商品詳細</span></h4>
  <div class="row">
    <div class="col-4">
      <%# @product.imageがないときは@product.genre.imageを表示する　%>
      <%= image_tag @product.image.present? ? @product.image : @product.genre.image, size: "300x300" %>
    </div>
    <div class="col-8">
      <table>
        <tr>
          <td width="150" style="padding-bottom: 10px;">商品名</td>
          <td style="padding-bottom: 10px;"><%= @product.name %></td>
        </tr>
        <tr>
          <td style="padding-bottom: 10px;">商品説明</td>
          <td style="padding-bottom: 10px;"><%= @product.description %></td>
        </tr>
        <tr>
          <td style="padding-bottom: 10px;">ジャンル</td>
          <td style="padding-bottom: 10px;"><%= @product.genre.name %></td>
        </tr>
        <tr>
          <td>カロリー</td>
          <td><%= @product.calories %> kcal</td>
        </tr>
        <tr>
          <td>タンパク質</td>
          <td><%= @product.protein %> g</td>
        </tr>
        <tr>
          <td>脂質</td>
          <td><%= @product.fat %> g</td>
        </tr>
        <tr>
          <td>炭水化物</td>
          <td><%= @product.carbohydrate %> g</td>
        </tr>
      </table>
      <div class="mt-5">
        <% if current_user == @product.user %>
          <%= link_to '編集', edit_product_path(@product), class: 'btn btn-success' %>
          <%= link_to '削除', product_path(@product), method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger ml-4' %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to "一覧に戻る", products_path %>
</div>