<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">SlimBini</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-info' %>
        </li>
        <li class="nav-item">
          <%= link_to '献立一覧', menus_path, class: 'nav-link text-info' %>
        </li>
        <li class="nav-item">
          <%= link_to '商品一覧', products_path, class: 'nav-link text-info' %>
        </li>
        <li class="nav-item">
          <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-info' %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-info' %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-info' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "nav-link text-info", method: :post %>
        </li>
      <% end %>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>
</header>