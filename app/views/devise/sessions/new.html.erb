<div class="container shadow">
  <h4>ログイン</h4>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="form-group">
      <div class="row">
        <div class="col-md-3 d-flex align-items-center justify-content-center justify-content-md-end">
          <%= f.label :email, 'メールアドレス', class: 'mb-3 mb-md-0' %>
        </div>
        <div class="col-md-9">
          <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: 'form-control' %>
        </div>
      </div>
  </div>
  
  <div class="form-group">
      <div class="row">
        <div class="col-md-3 d-flex align-items-center justify-content-center justify-content-md-end">
          <%= f.label :password, 'パスワード', class: 'mb-3 mb-md-0' %>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>
      </div>
  </div>
  
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 mx-auto">
        <%= f.submit "ログイン", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
  
  <% end %>
  
  <div class="row mt-5">
    <div class="col-md-6 mx-auto">
      <%= link_to 'ゲストログイン', users_guest_sign_in_path, class: "btn btn-secondary btn-block", method: :post %>
    </div>
  </div>
  
</div>