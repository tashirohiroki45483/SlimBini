<div class="container mt-5">
<h2>会員情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
<div class="field">
  <%= f.label :名前 %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :プロフィール画像 %><br />
  <%= f.file_field :image %>
  <% if resource.image.present? %>
    <div class="mt-3">
      現在のプロフィール画像：<br />
      <%= image_tag @user.image, size: "100x100" %>
    </div>
  <% end %>
</div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード %> <i>(変更しない場合は空欄のまま)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %> <i>(変更の確認のため、現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<div><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当によろしいですか？", turbo_confirm: "本当によろしいですか？" }, method: :delete, class: 'btn btn-danger' %></div>

<%= link_to "戻る", :back %>
</div>