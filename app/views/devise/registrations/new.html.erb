<div class="container shadow">
  <h4>新規会員登録</h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row mt-5">
      <div class="mx-auto">
        
        <div class="form-group">
          <div class="row">
            <div class="col-md-3 d-flex align-items-center justify-content-center justify-content-md-end">
              <%= f.label :name, '名前', class: 'mb-3 mb-md-0' %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :name, autofocus: true, placeholder: "令和道子", class: 'form-control' %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <div class="col-md-3 d-flex align-items-center justify-content-center justify-content-md-end">
              <%= f.label :email, 'メールアドレス', class: 'mb-3 mb-md-0' %>
            </div>
            <div class="col-md-9">
              <%=  f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: 'form-control' %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <div class="col-md-3 d-flex align-items-center justify-content-center justify-content-md-end">
              <%= f.label :password, 'パスワード（６文字以上）', class: 'mb-3 mb-md-0' %>
            </div>
            <div class="col-md-9">
              <%=  f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <div class="col-md-3 d-flex align-items-center justify-content-center justify-content-md-end">
              <%= f.label :password_confirmation, 'パスワード確認用', class: 'mb-3 mb-md-0' %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <div class="col-md-4 mx-auto">
              <%= f.submit "新規登録", class: 'btn btn-success btn-block' %>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  <% end %>
</div>