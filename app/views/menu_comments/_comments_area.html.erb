<table class="table">
  <thead>
    <tr>
      <th scope="col">コメント</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% menu.menu_comments.each do |menu_comment| %>
    <tr>
      <td>
        <%= image_tag(menu_comment.user.image.present? ? menu.user.image : 'default_image.png', size: "30x30") %>
        <%= menu_comment.user.name %>
      </td>
      <td><%= menu_comment.comment %></td>
      <% if menu_comment.score > 0.5 %>
        <td><i class="far fa-smile-beam fa-lg" style="color: #00db37;"></i></td>
      <% elsif menu_comment.score >= 0 %>
        <td><i class="far fa-smile fa-lg" style="color: #008a22;"></i></td>
      <% elsif menu_comment.score < 0 %>
        <td><i class="far fa-frown fa-lg" style="color: #003ca3;"></i></td>
      <% else %>
        <td></td>
      <% end %>
      <td class="menu_comment_<%= menu_comment.menu.id %>">
        <% if menu_comment.user == current_user %>
          <%= link_to "削除", menu_menu_comment_path(menu, menu_comment), class: "btn btn-sm btn-danger", remote: true, method: :delete %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>